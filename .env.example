# ===== Google ADK Configuration =====
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to git - it contains secrets!

# ===== AI Model Configuration =====
# Choose your AI provider
AGENT_MODEL=google  # Options: google, anthropic, openai

# ===== Google Gemini API =====
# Get key from: https://aistudio.google.com
GOOGLE_API_KEY=your_google_api_key_here

# ===== Anthropic Claude API (Optional) =====
# Get key from: https://console.anthropic.com
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ===== OpenAI API (Optional) =====
# Get key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# ===== Research Tools Configuration =====
# Web search API key (optional, for enhanced research)
SEARCH_API_KEY=your_search_api_key_here

# ===== Email Configuration (Optional) =====
# For sending reports via email
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SENDER_EMAIL=your_email@gmail.com
SENDER_PASSWORD=your_app_password_here  # Use Gmail App Password, not your actual password

# ===== Agent Configuration =====
AGENT_NAME=ResearcherBot
AGENT_DESCRIPTION=Market Research and Intelligence Agent
MAX_ITERATIONS=10
TIMEOUT_SECONDS=300

# ===== Logging =====
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# ===== Development =====
DEBUG=False
TEST_MODE=False
